<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_bg"
              android:orientation="vertical"
              android:paddingLeft="40dp"
              android:paddingRight="40dp"
              android:paddingTop="40dp"
    >

    <TextView
        style="@style/edit_text_title_style"
        android:layout_marginTop="20dp"
        android:text="@string/ssid"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/wifi_ssid"
            style="@style/password_edit_style"
            android:enabled="false"
            android:hint="@string/current_ssid"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/wifi_status"
            style="@style/edit_right_img_style"
            android:layout_width="13dp"
            android:layout_height="15dp"
            android:src="@drawable/selector_wifi"/>
    </FrameLayout>

    <View
        style="@style/edit_divider_line"/>

    <TextView
        style="@style/edit_text_title_style"
        android:text="@string/current_password"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <EditText
            android:id="@+id/current_password_edit"
            style="@style/password_edit_style"
            android:hint="@string/current_password"/>

        <ImageView
            android:id="@+id/display_status_current"
            style="@style/edit_right_img_style"
            android:src="@drawable/diplay_status_selector"/>
    </FrameLayout>

    <View
        android:visibility="gone"
        style="@style/edit_divider_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/device"
        android:textColor="@color/text_blue"
        android:textSize="18sp"/>

    <TextView
        style="@style/edit_text_title_style"
        android:layout_marginTop="20dp"
        android:text="@string/new_password"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/new_password_edit"
            style="@style/password_edit_style"
            android:hint="@string/new_password"/>

        <ImageView
            android:id="@+id/display_status_new"
            style="@style/edit_right_img_style"
            android:src="@drawable/diplay_status_selector"/>
    </FrameLayout>

    <View
        style="@style/edit_divider_line"/>

    <TextView
        style="@style/edit_text_title_style"
        android:text="@string/comfirm"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/comfirm_edit"
            style="@style/password_edit_style"
            android:hint="@string/comfirm"/>

        <ImageView
            android:id="@+id/display_status_comfirm"
            style="@style/edit_right_img_style"
            android:src="@drawable/diplay_status_selector"/>
    </FrameLayout>

    <View
        style="@style/edit_divider_line"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.cloud4magic.freecast.widget.TouchAnimButton
        android:id="@+id/modify_button"
        style="@style/modify_button_style"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:text="@string/modify"
        />

    <TextView
        android:id="@+id/forgot_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="10dp"
        android:text="@string/forgot_password"
        android:textColor="#b3b3b3"
        android:textSize="12sp"
        />
</LinearLayout>